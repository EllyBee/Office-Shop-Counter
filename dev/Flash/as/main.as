import flash.text.TextField;var digits:Number = 3;var counter1:Number = 0;var counter2:Number = 0;setup();function setup():void{	loadSounds();	updateCounter1();	updateCounter2();}function updateCounter1():void{	var point:String = format(counter1, digits);	input_button1.text = point;}function updateCounter2():void{	var point:String = format(counter2, digits);	input_button2.text = point;}function resetCounters():void{		counter1 = 0;	counter2 = 0;	updateCounter1();	updateCounter2();	}function format(point:Number, digits:Number):String{	var pointStr:String = "" + point;	while ( pointStr.length < digits)	{		pointStr = "0" + pointStr;	}	return pointStr;}///////////////actionfunction officeAction():void{	counter1++;	clickSound.play();	updateCounter1();	playRandomSounds('office');	sendScoreToPhp(counter1, counter2);}function shopAction():void{	counter2++;	clickSound.play();	updateCounter2();	playRandomSounds('shop');	sendScoreToPhp(counter1, counter2);}